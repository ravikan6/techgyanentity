generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_DATABASE_URL")
}

model Post {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  slug            String     @unique
  shortId         String     @unique
  title           String
  description     String?
  content         Json
  author          Author     @relation(fields: [authorId], references: [id])
  authorId        String     @db.ObjectId
  published       Boolean    @default(false)
  privacy         String     @default("PUBLIC")
  publishedAt     DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime?  @updatedAt
  deletedAt       DateTime?
  isDeleted       Boolean    @default(false)
  tags            String[]
  image           Image?
  comments        Comment[]
  claps           PostClap[]
  bookmarkUsers   User[]     @relation(fields: [bookmarkUserIds], references: [id])
  bookmarkUserIds String[]   @db.ObjectId
  meta            PostMeta?
  category        Category?  @relation(fields: [categoryId], references: [id])
  categoryId      String?    @db.ObjectId
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  username  String?   @unique
  Author    Author[]
  password  String?   @default("")
  role      String    @default("USER")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  image     Avatar?
  sex       String?
  dob       DateTime?

  meta UserMeta?

  following    Follower[]
  comments     Comment[]     @relation("commentByUser")
  commentClaps CommentClap[] @relation("commentClapsByUser")
  postClaps    PostClap[]
  bookmarks    Post[]        @relation(fields: [bookmarkIds], references: [id])
  bookmarkIds  String[]      @db.ObjectId

  micro_post_omment       MicroPostComment[]     @relation("MicroPostCommentByUser")
  micro_post_comment_clap MicroPostCommentClap[] @relation("MicroPostCommentClapsByUser")
}

model Author {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  user             User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String?            @db.ObjectId
  shortId          String             @unique @default(cuid())
  name             String
  handle           String             @unique
  deletedAt        DateTime?
  isDeleted        Boolean            @default(false)
  social           LinkType[]
  contactEmail     String?
  bio              String?
  Post             Post[]
  image            Avatar?
  banner           Banner?
  followers        Follower[]
  comments         Comment[]
  microPost        MicroPost[]
  MicroPostComment MicroPostComment[]
}

model Follower {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  author     Author   @relation(fields: [authorId], references: [id])
  authorId   String   @db.ObjectId
  follower   User     @relation(fields: [followerId], references: [id])
  followerId String   @db.ObjectId
  createdAt  DateTime @default(now())
}

model Comment {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  post      Post?         @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String?       @db.ObjectId
  content   String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  deletedAt DateTime?
  isDeleted Boolean       @default(false)
  user      User?         @relation("commentByUser", fields: [userId], references: [id])
  userId    String?       @db.ObjectId
  author    Author?       @relation(fields: [authorId], references: [id])
  authorId  String?       @db.ObjectId
  replies   Comment[]     @relation("CommentToReplies")
  parent    Comment?      @relation("CommentToReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId  String?       @db.ObjectId
  claps     CommentClap[] @relation("CommentToCommentClap")
}

model CommentClap {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User?    @relation("commentClapsByUser", fields: [userId], references: [id], onDelete: Cascade)
  userId    String?  @db.ObjectId
  comment   Comment? @relation("CommentToCommentClap", fields: [commentId], references: [id], onDelete: Cascade)
  commentId String?  @db.ObjectId
  createdAt DateTime @default(now())
}

model PostClap {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?  @db.ObjectId
  createdAt DateTime @default(now())
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  posts     Post[]
}

model MicroPost {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  shortId     String             @unique
  type        MicroPostType      @default(TEXT)
  content     String?
  typeContent String?            @db.ObjectId
  author      Author             @relation(fields: [authorId], references: [id])
  authorId    String             @db.ObjectId
  published   Boolean            @default(false)
  publishedAt DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime?          @updatedAt
  deletedAt   DateTime?
  isDeleted   Boolean            @default(false)
  meta        PostMeta?
  comments    MicroPostComment[]
}

model MicroPostComment {
  id        String                 @id @default(auto()) @map("_id") @db.ObjectId
  post      MicroPost?             @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String?                @db.ObjectId
  content   String
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt
  deletedAt DateTime?
  isDeleted Boolean                @default(false)
  user      User?                  @relation("MicroPostCommentByUser", fields: [userId], references: [id])
  userId    String?                @db.ObjectId
  author    Author?                @relation(fields: [authorId], references: [id])
  authorId  String?                @db.ObjectId
  replies   MicroPostComment[]     @relation("CommentToReplies")
  parent    MicroPostComment?      @relation("CommentToReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId  String?                @db.ObjectId
  claps     MicroPostCommentClap[] @relation("CommentToCommentClap")
}

model MicroPostCommentClap {
  id        String            @id @default(auto()) @map("_id") @db.ObjectId
  user      User?             @relation("MicroPostCommentClapsByUser", fields: [userId], references: [id], onDelete: Cascade)
  userId    String?           @db.ObjectId
  comment   MicroPostComment? @relation("CommentToCommentClap", fields: [commentId], references: [id], onDelete: Cascade)
  commentId String?           @db.ObjectId
  createdAt DateTime          @default(now())
}

model Poll {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  options   PollOption[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  deletedAt DateTime?
  isDeleted Boolean      @default(false)
  votes     Vote[]

  @@index([isDeleted])
}

model Vote {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  pollId String @db.ObjectId
  option Int
  userId String @db.ObjectId
  poll   Poll   @relation(fields: [pollId], references: [id])

  @@unique([pollId, userId], name: "vote_by_user")
  @@index([pollId])
  @@index([userId])
}

model ImagePost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  list      Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type UserMeta {
  location   String?
  last_login DateTime?
  login_info LoginInfo[]
}

type LoginInfo {
  ip        String?
  longitude Float?
  latitude  Float?
  device    String?
  status    Boolean?
}

type PollOption {
  id          Int
  text        String
  description String?
}

enum MicroPostType {
  TEXT
  LINK
  POLL
  ARTICLE
  IMAGE
}

type Image {
  url      String
  alt      String?
  provider String? @default("cloudinary")
  caption  String?
  location String?
}

type PostMeta {
  comment_enabled Boolean @default(true)
}

type Avatar {
  url      String
  provider String? @default("cloudinary")
}

type Banner {
  url      String
  provider String? @default("cloudinary")
}

type LinkType {
  id    String?
  url   String
  title String
}
